
Iso : Set -> Set -> Set
  := \A B. (to    : A -> B)
         * (from  : B -> A)
         * (eto   : (a : A) -> from (to a) = a)
         * (efrom : (b : B) -> to (from b) = b)
         * Top

id : {A} -> Iso A A
  := ( \a. a
     , \a. a
     , \a. refl
     , \a. refl
     , tt)


comp : {A B C} -> Iso B C -> Iso A B -> Iso A C
  := \f g. ( \a. f.to (g.to a)
           , \c. g.from (f.from c)
           , \a. trans (ap g.from (f.eto (g.to a))) (g.eto a)
           , \c. trans (ap f.to (g.efrom (f.from c))) (f.efrom c)
           , tt)

idl : {A B} {f : Iso A B} -> comp id f = f
  := ( \_. refl
     , \_. refl
     , _
     )